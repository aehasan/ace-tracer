{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@cs124/ace-tracer": ["../ace-tracer/dist/"],
      "@cs124/ace-tracer-ui": ["../ace-tracer-ui/dist/"],
      "@cs124/audio-recorder": ["../audio-recorder/dist"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_document.js"],
  "exclude": ["node_modules"]
}
